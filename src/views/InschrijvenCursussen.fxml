<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="InschrijvenCursussenController">
    <top>
        <HBox layoutX="20" layoutY="20" spacing="20">
            <Button fx:id="back" text="Home " onAction="#back"/>
            <Text text=" Voor welke les wil je inschrijven."/>
            <ChoiceBox fx:id="choiceBox" prefWidth="200"/>

        </HBox>
    </top>
    <center>
        <VBox layoutX="150" layoutY="150" spacing="10">
            <Label text="om te confirmeren vul je gebruikersnaam en wachtwoord in."/>
            <TextField fx:id="Gebruikersnaam" promptText="Gebruikersnaam:" maxWidth="200"/>
            <PasswordField fx:id="Wachtwoord" promptText="Wachtwoord" maxWidth="200"/>
            <Button fx:id="confirm" text="Schrijf in" onAction="#registerCourse"/>
        </VBox>

    </center>

</BorderPane>