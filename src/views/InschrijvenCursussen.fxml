<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>


<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="InschrijvenCursussenController">
    <padding>
        <Insets left="5" top="5">

        </Insets>
    </padding>
    <stylesheets>
        <URL value="@StylingHoofdPagina" />
    </stylesheets>
    <top>
        <HBox layoutX="20" layoutY="20" spacing="20">
            <Button fx:id="back" text="Home " onAction="#back"/>
            <Label text=" Voor welke les wil je inschrijven."/>
            <ChoiceBox fx:id="choiceBox" prefWidth="200"/>

        </HBox>
    </top>
    <center>
        <Group>
            <Label text="om te confirmeren vul je gebruikersnaam en wachtwoord in." layoutY="750" layoutX="200"/>
            <TextField fx:id="Gebruikersnaam" promptText="Gebruikersnaam:" layoutY="750" layoutX="200"/>
            <PasswordField fx:id="Wachtwoord" promptText="Wachtwoord" prefWidth="300"  layoutX="400" layoutY="850"/>
            <Button fx:id="confirm" text="Schrijf in" onAction="#registerCourse" layoutX="400" layoutY="900"/>
        </Group>

    </center>

</BorderPane>